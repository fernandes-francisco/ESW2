@model string

@{
    ViewData["Title"] = "Recuperar Senha";
    ViewData["HideNavbar"] = true;
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg rounded">
            <div class="card-header bg-primary text-white text-center">
                <h3 class="mb-0">Recuperar Senha</h3>
            </div>
            <div class="card-body">
                <form asp-action="ForgotPassword" method="post">
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" name="email" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Enviar Link</button>
                </form>

                @if (ViewBag.Link != null)
                {
                    <div class="alert alert-info mt-3 text-break">
                        Link gerado (simulação): <a href="@ViewBag.Link" class="text-decoration-underline">@ViewBag.Link</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>