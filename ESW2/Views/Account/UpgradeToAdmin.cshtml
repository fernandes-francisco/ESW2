@{
    ViewData["Title"] = "Atualizar para Administrador";
}

<style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        background-color: white;
        overflow: hidden;
    }
</style>

<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card shadow-lg rounded" style="width: 100%; max-width: 400px;">
        <div class="card-header bg-primary text-white text-center">
            <h4 class="mb-0">Atualizar Conta para Administrador</h4>
        </div>
        <div class="card-body">
            @if (!string.IsNullOrEmpty(ViewBag.SuccessMessage))
            {
                <div class="alert alert-success text-center">@ViewBag.SuccessMessage</div>
            }

            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="alert alert-danger text-center">@ViewBag.ErrorMessage</div>
            }

            <form method="post" asp-controller="Account" asp-action="UpgradeToAdmin">
                <div class="mb-3">
                    <label class="form-label">Nome de utilizador</label>
                    <input type="text" name="username" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Senha para Administrador</label>
                    <input type="password" name="adminPassword" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-primary w-100">Atualizar</button>
            </form>
        </div>
    </div>
</div>