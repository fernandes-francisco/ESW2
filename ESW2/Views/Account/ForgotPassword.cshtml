@model string

@{
    ViewData["Title"] = "Recuperar Senha";
    ViewData["HideNavbar"] = true;
    Layout = "_Layout"; // Certifica-te que estás a usar o layout principal
}

<style>
    body, html {
        height: 100%;
        overflow: hidden; /* impede o scroll vertical */
    }

    .back-button {
        position: absolute;
        top: 20px;
        left: 20px;
        z-index: 1050;
    }
</style>

<!-- Botão Voltar fixo -->
<a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary back-button">
    ← Voltar
</a>

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-lg rounded">
            <div class="card-header bg-primary text-white text-center">
                <h3 class="mb-0">Recuperar Senha</h3>
            </div>
            <div class="card-body">
                <form asp-action="ForgotPassword" method="post">
                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" name="email" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Enviar Email</button>
                </form>

                @if (ViewBag.Link != null)
                {
                    <div class="alert alert-info mt-3 text-break">
                        Link gerado (simulação): <a href="@ViewBag.Link" class="text-decoration-underline">@ViewBag.Link</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>