@model string

@{
    ViewData["Title"] = "Recuperar Palavra-passe";
    ViewData["HideNavbar"] = true;
    Layout = "_Layout"; 
}

<style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        background-color: #f8f9fa; 
        overflow: hidden;
    }

    /* Estilo para a barra azul no topo */
    .top-bar {
        width: 100%;
        height: 60px; 
        background-color: #0d6efd; 
        display: flex;
        align-items: center;
        padding: 0 20px; 
        position: fixed; 
        top: 0;
        left: 0;
        z-index: 1000; 
    }

    .top-bar img {
        height: 190px; 
        width: auto; 
    }

    /* Ajuste para o conteúdo principal não ser coberto pela barra fixa */
    .main-content {
        margin-top: 60px; /* Espaço para a barra */
        height: calc(100vh - 60px); /* Ajusta a altura do conteúdo */
    }

    .login-card {
        width: 100%;
        max-width: 900px; /* Largura igual às outras páginas */
        height: 550px; /* Altura igual às outras páginas */
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        display: flex;
    }

    .image-section {
        width: 50%;
        background-image: url('https://static.vecteezy.com/system/resources/previews/003/689/228/non_2x/online-registration-or-sign-up-login-for-account-on-smartphone-app-user-interface-with-secure-password-mobile-application-for-ui-web-banner-access-cartoon-people-illustration-vector.jpg');
        background-size: cover;
        background-position: center;
    }

    .form-section {
        width: 50%;
        padding: 2.5rem; 
        background-color: #ffffff;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }
</style>

<!-- Inclua o Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<!-- Barra azul com logotipo -->
<div class="top-bar">
    <img src="/ativoslogo.png" alt="Logotipo Ativos360" />
</div>

<!-- Conteúdo principal ajustado para a barra -->
<div class="main-content d-flex justify-content-center align-items-center">
    <div class="login-card">
        <div class="image-section"></div>
        <div class="form-section">
            <h3 class="text-center mb-4">Recuperar Senha</h3>
            <div class="text-center text-muted mb-4">
                <p>
                    Insira o seu email para receber um link de recuperação da palavra-passe.
                </p>
            </div>

            <form asp-action="ForgotPassword" method="post">
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" name="email" class="form-control" required />
                </div>
                <button type="submit" class="btn btn-primary w-100 mb-3">Enviar Email</button>

                <div class="text-center">
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary w-100">Voltar</a>
                </div>
            </form>

            @if (ViewBag.Link != null)
            {
                <div class="alert alert-info mt-3 text-break text-center">
                    Link gerado (simulação): <a href="@ViewBag.Link" class="text-decoration-underline">@ViewBag.Link</a>
                </div>
            }
        </div>
    </div>
</div>
