@{
    ViewData["Title"] = "Relatório de Depósitos por Banco";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="RelatorioBancos" method="get">
    <div class="form-group">
        <label>Data de Início:</label>
        <input type="date" name="dataInicio" value="@ViewBag.DataInicio" class="form-control" />
    </div>
    <div class="form-group">
        <label>Data de Fim:</label>
        <input type="date" name="dataFim" value="@ViewBag.DataFim" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Criar Relatório</button>
</form>

<table class="table table-striped mt-3">
    <thead>
    <tr>
        <th>Nome do Banco</th>
        <th>Valor Total Depositado</th>
        <th>Custo Total de Juros</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Banco</td>
            <td>@item.TotalDeposito</td>
            <td>@item.CustoTotalJuros</td>
        </tr>
    }
    </tbody>
</table>