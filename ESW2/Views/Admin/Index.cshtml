@{
    ViewData["Title"] = "Painel Administrativo";
    ViewData["HideNavbar"] = true;
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
            overflow: hidden;
        }
        .top-bar {
            width: 100%;
            height: 60px;
            background-color: #0d6efd;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 24px;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1100;
            box-shadow: 0 2px 6px rgba(0,0,0,0.04);
        }
        .hamburger-btn {
            background: none;
            border: none;
            margin-right: 18px;
            padding: 8px 10px 8px 0;
            display: flex;
            align-items: center;
            cursor: pointer;
        }
        .hamburger-btn:focus {
            outline: none;
        }
        .hamburger-icon {
            width: 28px;
            height: 28px;
            display: block;
        }
        .top-bar img {
            height: 190px;
            width: auto;
            display: block;
        }
        .welcome-text {
            color: #fff;
            font-weight: 500;
            font-size: 1.2rem;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        .welcome-text a {
            color: #fff;
            text-decoration: none;
            transition: color 0.2s;
        }
        .welcome-text a:hover {
            color: #e9ecef;
        }
        .main-content {
            position: fixed;
            top: 60px;
            left: 0;
            right: 0;
            bottom: 0;
            padding: 20px;
            overflow-y: auto;
        }
        /* Estilos para o menu lateral estilizado */
        .offcanvas-header {
            border-bottom: 1px solid #e9ecef;
            padding-bottom: 0.7rem;
            padding-top: 1.2rem;
            background-color: #0d6efd;
            color: #fff;
        }
        .offcanvas-header img {
            height: 32px;
            margin-right: 10px;
        }
        .menu-links .nav-link {
            color: #0d6efd;
            border-radius: 8px;
            transition: background 0.15s, color 0.15s;
            padding: 12px 16px;
            font-size: 1.12rem;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .menu-links .nav-link:hover, .menu-links .nav-link.active {
            background: #e7f1ff;
            color: #084298;
            text-decoration: none;
        }
        .menu-links .nav-link.text-success {
            color: #198754;
        }
        .menu-links .nav-link.text-success:hover {
            background: #e9fbe7;
            color: #146c43;
        }
        .btn-logout {
            font-size: 1.1rem;
            padding: 12px 0;
            margin-top: 2.5rem;
            border-radius: 8px;
            font-weight: 500;
        }
        .offcanvas-body {
            padding-top: 2rem !important;
        }
        /* Estilos específicos para o painel administrativo */
        .list-group-item-action {
            font-size: 1.1rem;
            padding: 15px 20px;
            border-radius: 8px;
            background-color: #fff;
            margin-bottom: 10px;
        }
        .list-group-item-action:hover {
            background-color: #e7f1ff;
            color: #084298;
        }
        .dashboard-container {
            max-width: 1200px;
            margin: 0 auto;
        }
        .dashboard-header {
            margin-bottom: 30px;
        }
        .dashboard-card {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            margin-bottom: 20px;
            transition: transform 0.2s;
        }
        .dashboard-card:hover {
            transform: translateY(-5px);
        }
        /* Novos estilos para cards coloridos como na imagem */
        .card-gerir-bancos .card-header {
            background-color: #4285F4;
            color: white;
            border-radius: 10px 10px 0 0;
        }
        .card-configuracoes .card-header {
            background-color: #34A853;
            color: white;
            border-radius: 10px 10px 0 0;
        }
        .card-relatorios .card-header {
            background-color: #EA4335;
            color: white;
            border-radius: 10px 10px 0 0;
        }
        .card-estatisticas .card-header {
            background-color: #FBBC05;
            color: white;
            border-radius: 10px 10px 0 0;
        }
        .card-notificacoes .card-header {
            background-color: #9C27B0;
            color: white;
            border-radius: 10px 10px 0 0;
        }
        /* Botões com cores correspondentes */
        .btn-gerir-bancos {
            background-color: #4285F4;
            border-color: #4285F4;
            color: white;
        }
        .btn-configuracoes {
            background-color: #34A853;
            border-color: #34A853;
            color: white;
        }
        .btn-relatorios {
            background-color: #EA4335;
            border-color: #EA4335;
            color: white;
        }
    </style>
</head>
<body>
<!-- Barra azul com botão hamburger, logotipo e mensagem de boas-vindas com ícone de perfil -->
<div class="top-bar">
    <div class="d-flex align-items-center">
        <button class="hamburger-btn" type="button" data-bs-toggle="offcanvas" data-bs-target="#sideMenu" aria-controls="sideMenu" aria-label="Abrir menu">
            <svg class="hamburger-icon" viewBox="0 0 100 80" fill="#fff">
                <rect width="100" height="14" rx="6"></rect>
                <rect y="33" width="100" height="14" rx="6"></rect>
                <rect y="66" width="100" height="14" rx="6"></rect>
            </svg>
        </button>
        <img src="/ativoslogo.png" alt="Logotipo Ativos360" />
    </div>
    <div class="welcome-text">
        Bem-vindo, <a href="@Url.Action("Perfil", "Admin")" title="Aceder ao Perfil">@User.Identity.Name</a>
        <a href="@Url.Action("Perfil", "Admin")" title="Aceder ao Perfil">
            <i class="bi bi-person-circle"></i>
        </a>
    </div>
</div>

<!-- Menu lateral (offcanvas) -->
<div class="offcanvas offcanvas-start" tabindex="-1" id="sideMenu" aria-labelledby="sideMenuLabel">
    <div class="offcanvas-header">
        <img src="/ativoslogo.png" alt="Logotipo Ativos360">
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Fechar"></button>
    </div>
    <div class="offcanvas-body px-4">
        <ul class="nav flex-column menu-links">
            <li class="nav-item mb-2">
                <a class="nav-link active" asp-controller="Admin" asp-action="Index">
                    <i class="bi bi-house-door"></i>Painel Administrativo
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link" asp-controller="Admin" asp-action="Banks">
                    <i class="bi bi-bank"></i>Gerir Bancos
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link" asp-controller="Admin" asp-action="Settings">
                    <i class="bi bi-gear"></i>Configurar Juros e Impostos
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link" asp-controller="Admin" asp-action="RelatorioBancos">
                    <i class="bi bi-file-earmark-text"></i>Relatório de Depósitos por Banco
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link" asp-controller="Admin" asp-action="Perfil">
                    <i class="bi bi-person"></i>Perfil
                </a>
            </li>
        </ul>
        <form method="post" asp-controller="Account" asp-action="Logout">
            <button type="submit" class="btn btn-danger btn-logout w-100 mt-4">
                <i class="bi bi-box-arrow-right me-2"></i>Terminar Sessão
            </button>
        </form>
    </div>
</div>

<!-- Conteúdo principal ajustado para a barra -->
<div class="main-content">
    <div class="dashboard-container">
        <div class="dashboard-header">
            <h2 class="mb-4">@ViewData["Title"]</h2>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="card dashboard-card card-gerir-bancos">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-bank me-2"></i>Gerir Bancos</h5>
                    </div>
                    <div class="card-body">
                        <p>Adicione, edite ou remova bancos do sistema.</p>
                        <a asp-controller="Admin" asp-action="Banks" class="btn btn-gerir-bancos">Aceder</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card dashboard-card card-configuracoes">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-gear me-2"></i>Configurações</h5>
                    </div>
                    <div class="card-body">
                        <p>Configure taxas de juros e impostos do sistema.</p>
                        <a asp-controller="Admin" asp-action="Settings" class="btn btn-configuracoes">Aceder</a>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card dashboard-card card-relatorios">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-file-earmark-text me-2"></i>Relatórios</h5>
                    </div>
                    <div class="card-body">
                        <p>Visualize relatórios de depósitos por banco.</p>
                        <a asp-controller="Admin" asp-action="RelatorioBancos" class="btn btn-relatorios">Aceder</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card dashboard-card card-estatisticas">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-graph-up me-2"></i>Estatísticas</h5>
                    </div>
                    <div class="card-body">
                        <p>Total de clientes: <strong>125</strong></p>
                        <p>Total de ativos: <strong>348</strong></p>
                        <p>Valor total gerido: <strong>€ 1,245,678.00</strong></p>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card dashboard-card card-notificacoes">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-bell me-2"></i>Notificações</h5>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-info mb-2">
                            <small>Hoje, 14:30</small>
                            <p class="mb-0">3 novos clientes registrados</p>
                        </div>
                        <div class="alert alert-warning mb-2">
                            <small>Ontem, 16:45</small>
                            <p class="mb-0">Taxa de juros do Banco XYZ atualizada</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
