@model ESW2.Models.AdminSettingsViewModel
@{
    ViewData["Title"] = "Configurar Juros e Impostos";
    ViewData["HideNavbar"] = true;
}

<!DOCTYPE html>
<html lang="pt">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
            background-color: #f8f9fa;
            overflow: hidden;
        }
        .top-bar {
            width: 100%;
            height: 60px;
            background-color: #0d6efd;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 24px;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1100;
            box-shadow: 0 2px 6px rgba(0,0,0,0.04);
        }
        .hamburger-btn {
            background: none;
            border: none;
            margin-right: 18px;
            padding: 8px 10px 8px 0;
            display: flex;
            align-items: center;
            cursor: pointer;
        }
        .hamburger-btn:focus {
            outline: none;
        }
        .hamburger-icon {
            width: 28px;
            height: 28px;
            display: block;
        }
        .top-bar img {
            height: 190px;
            width: auto;
            display: block;
        }
        .welcome-text {
            color: #fff;
            font-weight: 500;
            font-size: 1.2rem;
            display: flex;
            align-items: center;
            gap: 8px;
        }
        .welcome-text a {
            color: #fff;
            text-decoration: none;
            transition: color 0.2s;
        }
        .welcome-text a:hover {
            color: #e9ecef;
        }
        .main-content {
            position: fixed;
            top: 60px;
            left: 0;
            right: 0;
            bottom: 0;
            padding: 20px;
            overflow-y: auto;
        }
        /* Estilos para o menu lateral estilizado */
        .offcanvas-header {
            border-bottom: 1px solid #e9ecef;
            padding-bottom: 0.7rem;
            padding-top: 1.2rem;
            background-color: #0d6efd;
            color: #fff;
        }
        .offcanvas-header img {
            height: 32px;
            margin-right: 10px;
        }
        .menu-links .nav-link {
            color: #0d6efd;
            border-radius: 8px;
            transition: background 0.15s, color 0.15s;
            padding: 12px 16px;
            font-size: 1.12rem;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .menu-links .nav-link:hover, .menu-links .nav-link.active {
            background: #e7f1ff;
            color: #084298;
            text-decoration: none;
        }
        .menu-links .nav-link.text-success {
            color: #198754;
        }
        .menu-links .nav-link.text-success:hover {
            background: #e9fbe7;
            color: #146c43;
        }
        .btn-logout {
            font-size: 1.1rem;
            padding: 12px 0;
            margin-top: 2.5rem;
            border-radius: 8px;
            font-weight: 500;
        }
        .offcanvas-body {
            padding-top: 2rem !important;
        }
        /* Estilos específicos para a página de configurações */
        .settings-container {
            max-width: 800px;
            margin: 0 auto;
        }
        .settings-card {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            margin-bottom: 20px;
        }
        .settings-card .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
            color: #212529;
            font-weight: bold;
            border-radius: 10px 10px 0 0;
        }
        .btn-back {
            margin-top: 10px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
<!-- Barra azul com botão hamburger, logotipo e mensagem de boas-vindas com ícone de perfil -->
<div class="top-bar">
    <div class="d-flex align-items-center">
        <button class="hamburger-btn" type="button" data-bs-toggle="offcanvas" data-bs-target="#sideMenu" aria-controls="sideMenu" aria-label="Abrir menu">
            <svg class="hamburger-icon" viewBox="0 0 100 80" fill="#fff">
                <rect width="100" height="14" rx="6"></rect>
                <rect y="33" width="100" height="14" rx="6"></rect>
                <rect y="66" width="100" height="14" rx="6"></rect>
            </svg>
        </button>
        <img src="/ativoslogo.png" alt="Logotipo Ativos360" />
    </div>
    <div class="welcome-text">
        Bem-vindo, <a href="@Url.Action("Perfil", "Admin")" title="Aceder ao Perfil">@User.Identity.Name</a>
        <a href="@Url.Action("Perfil", "Admin")" title="Aceder ao Perfil">
            <i class="bi bi-person-circle"></i>
        </a>
    </div>
</div>

<!-- Menu lateral (offcanvas) -->
<div class="offcanvas offcanvas-start" tabindex="-1" id="sideMenu" aria-labelledby="sideMenuLabel">
    <div class="offcanvas-header">
        <img src="/ativoslogo.png" alt="Logotipo Ativos360">
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Fechar"></button>
    </div>
    <div class="offcanvas-body px-4">
        <ul class="nav flex-column menu-links">
            <li class="nav-item mb-2">
                <a class="nav-link" asp-controller="Admin" asp-action="Index">
                    <i class="bi bi-house-door"></i>Painel Administrativo
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link" asp-controller="Admin" asp-action="Banks">
                    <i class="bi bi-bank"></i>Gerir Bancos
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link active" asp-controller="Admin" asp-action="Settings">
                    <i class="bi bi-gear"></i>Configurar Juros e Impostos
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link" asp-controller="Admin" asp-action="RelatorioBancos">
                    <i class="bi bi-file-earmark-text"></i>Relatório de Depósitos por Banco
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link" asp-controller="Admin" asp-action="Perfil">
                    <i class="bi bi-person"></i>Perfil
                </a>
            </li>
        </ul>
        <form method="post" asp-controller="Account" asp-action="Logout">
            <button type="submit" class="btn btn-danger btn-logout w-100 mt-4">
                <i class="bi bi-box-arrow-right me-2"></i>Terminar Sessão
            </button>
        </form>
    </div>
</div>

<!-- Conteúdo principal ajustado para a barra -->
<div class="main-content">
    <div class="settings-container">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="Index" class="btn btn-secondary btn-back">
            <i class="bi bi-arrow-left me-2"></i>Voltar
        </a>

        <div class="card settings-card">
            <div class="card-header">
                <h5 class="mb-0">Configurações Globais</h5>
            </div>
            <div class="card-body">
                <form asp-action="UpdateSettings" method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label class="form-label">Juro Anual Padrão (%)</label>
                        <div class="input-group">
                            <input asp-for="DefaultInterestRate" class="form-control" step="0.01" min="0" />
                            <span class="input-group-text">%</span>
                        </div>
                        <small class="text-muted">Este valor será usado como taxa de juros padrão para novos depósitos e fundos.</small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Percentual de Imposto (%)</label>
                        <div class="input-group">
                            <input asp-for="DefaultTaxRate" class="form-control" step="0.01" min="0" />
                            <span class="input-group-text">%</span>
                        </div>
                        <small class="text-muted">Este valor será usado como percentual de imposto padrão para novos ativos financeiros.</small>
                    </div>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle me-2"></i>Salvar
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
